<div name="gauche" class="float-left">
  <ul>
    {{#each model as |band|}}
      <li class="list-reset text-xl leading-loose bg-teal-darkest mt-4 pl-8 pr-8 ml-8 shadow-lg rounded-lg band">
        <div class="flex flex-row justify-between">
          {{!-- Première valeur le texte que l'on affiche, deuxième valeur la route, le troisième est le slug --}}
          {{link-to band.name "bands.band.songs" band.id class="text-white no-underline hover:text-white"}}
        </div>
      </li>
    {{/each}}
  </ul>
</div>
{{outlet}}
<div class="float-right">
  <form onSubmit={{action "saveBand"}}>
    {{#if isAddingBand}}
      <div>
        <span>{{input value=newBandName class="h-8"}}</span>
        <button disabled={{isAddButtonDisabled}} class="bg-teal hover:bg-teal-light text-teal-darker font-bold py-2 px-4 rounded pt-4">Add band</button>
        <button class="bg-teal hover:bg-teal-light text-teal-darker font-bold py-2 px-4 rounded pt-4" onclick={{action "cancelBand"}}>Cancel</button>
      </div>
    {{else}}
      <div>
        <div onclick={{action "addBand"}}>
          Add new band
          <svg class="h-4 w-4 fill-current text-white inline-block" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
            <path d="M15.75 8l-3.74-3.75a3.99 3.99 0 0 1 6.82-3.08A4 4 0 0 1 15.75 8zm-13.9 7.3l9.2-9.19 2.83 2.83-9.2 9.2-2.82-2.84zm-1.4 2.83l2.11-2.12 1.42 1.42-2.12 2.12-1.42-1.42zM10 15l2-2v7h-2v-5z" />
          </svg>
        </div>
      </div>
    {{/if}}
  </form>
</div>